{
  "name": "oppivelvollisuus-frontend",
  "version": "0.0.1",
  "description": "Frontend for oppivelvollisuus",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist node_modules/.cache",
    "dev": "concurrently -n tsc,esbuild -c blue,green 'yarn type-check:watch' 'yarn build:serve'",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --max-warnings 0 .",
    "type-check": "tsc --build --force .",
    "type-check:watch": "yarn type-check --watch --preserveWatchOutput",
    "build": "node build.js",
    "build:dev": "node build.js --dev",
    "build:serve": "node build.js --dev --watch --serve"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "6.5.0",
    "@fortawesome/free-regular-svg-icons": "6.5.0",
    "@fortawesome/free-solid-svg-icons": "6.5.0",
    "@fortawesome/react-fontawesome": "0.2.0",
    "autosize": "^6.0.1",
    "classnames": "^2.5.1",
    "core-js": "^3.37.0",
    "date-fns": "^3.6.0",
    "lodash": "^4.17.21",
    "polished": "^4.3.1",
    "react": "^18.3.1",
    "react-csv": "^2.2.2",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.23.1",
    "styled-components": "6.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@types/autosize": "^4.0.3",
    "@types/lodash": "^4.17.0",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.2",
    "@types/react-csv": "^1.1.10",
    "@types/react-dom": "^18.3.0",
    "@types/react-router-dom": "^5.3.3",
    "@types/styled-components": "^5.1.29",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "axios": "^1.7.2",
    "concurrently": "^8.2.2",
    "esbuild": "^0.21.5",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-lodash": "^8.0.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.0.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "express": "^4.19.2",
    "express-http-proxy": "^2.0.0",
    "postcss": "^8.4.31",
    "postcss-preset-env": "^9.5.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.5",
    "yargs": "^17.7.2"
  },
  "engines": {
    "node": ">= 20.11.0"
  },
  "prettier": {
    "bracketSpacing": true,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "postcss": {
    "plugins": {
      "postcss-preset-env": true
    }
  },
  "eslintConfig": {
    "ignorePatterns": [
      "**/dist"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:prettier/recommended",
      "plugin:react-hooks/recommended"
    ],
    "plugins": [
      "import",
      "react-hooks",
      "lodash"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "import/order": [
        "warn",
        {
          "alphabetize": {
            "order": "asc"
          },
          "groups": [
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index"
          ],
          "newlines-between": "always"
        }
      ],
      "react/jsx-curly-brace-presence": [
        "error",
        "never"
      ],
      "react/prop-types": "off",
      "react/self-closing-comp": [
        "error",
        {
          "component": true,
          "html": true
        }
      ],
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "prefer-arrow-callback": [
        "error",
        {
          "allowNamedFunctions": true
        }
      ],
      "arrow-body-style": [
        "error",
        "as-needed"
      ]
    },
    "overrides": [
      {
        "files": "**/*.{ts,tsx}",
        "extends": [
          "plugin:@typescript-eslint/recommended-type-checked",
          "plugin:@typescript-eslint/stylistic-type-checked"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "project": "./tsconfig.eslint.json"
        },
        "plugins": [
          "@typescript-eslint",
          "react-hooks"
        ],
        "rules": {
          "@typescript-eslint/no-misused-promises": [
            "error",
            {
              "checksVoidReturn": false
            }
          ],
          "@typescript-eslint/no-unused-vars": [
            "warn",
            {
              "argsIgnorePattern": "^_",
              "varsIgnorePattern": "^_"
            }
          ],
          "@typescript-eslint/consistent-type-definitions": "off",
          "@typescript-eslint/prefer-nullish-coalescing": "off",
          "@typescript-eslint/prefer-optional-chain": "off",
          "@typescript-eslint/no-var-requires": "off"
        }
      },
      {
        "files": "src/**/*.{js,jsx,ts,tsx}",
        "rules": {
          "lodash/import-scope": [
            "error",
            "method"
          ]
        }
      }
    ]
  },
  "packageManager": "yarn@4.0.1"
}
