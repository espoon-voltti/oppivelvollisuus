{
  "name": "oppivelvollisuus-api-gateway",
  "version": "0.0.1",
  "description": "API gateway for oppivelvollisuus",
  "type": "module",
  "private": true,
  "scripts": {
    "clean": "rm -rf ./build ./dist",
    "build": "yarn clean && yarn install && tsc --build .",
    "lint": "eslint --max-warnings 0 .",
    "dev": "tsc --build . && concurrently --prefix '[{name}]' --names 'tsc,nodemon' 'tsc --build --preserveWatchOutput -w .' 'NODE_ENV=local nodemon dist/index.js'"
  },
  "dependencies": {
    "@node-saml/node-saml": "5.0.1",
    "@node-saml/passport-saml": "5.0.1",
    "axios": "1.9.0",
    "connect-redis": "8.1.0",
    "cookie-parser": "1.4.7",
    "csurf": "1.11.0",
    "date-fns": "4.1.0",
    "express": "5.1.0",
    "express-http-proxy": "2.1.1",
    "express-session": "1.18.1",
    "fast-xml-parser": "5.2.3",
    "helmet": "8.1.0",
    "jsonwebtoken": "9.0.2",
    "lodash": "4.17.21",
    "make-error-cause": "2.3.0",
    "nocache": "4.0.0",
    "passport": "0.7.0",
    "pino": "9.7.0",
    "pino-http": "10.5.0",
    "pino-pretty": "13.0.0",
    "query-string": "9.2.0",
    "redis": "5.1.0",
    "source-map-support": "0.5.21",
    "zod": "3.25.51"
  },
  "devDependencies": {
    "@types/cookie-parser": "1.4.8",
    "@types/csurf": "1.11.5",
    "@types/express-http-proxy": "1.6.6",
    "@types/express-session": "1.18.1",
    "@types/jsonwebtoken": "9.0.7",
    "@types/lodash": "4.17.17",
    "@types/node": "22.15.29",
    "@types/passport": "1.0.17",
    "@types/passport-strategy": "0.2.38",
    "@types/redis": "4.0.11",
    "@types/source-map-support": "0.5.10",
    "@typescript-eslint/eslint-plugin": "8.33.1",
    "@typescript-eslint/parser": "8.33.1",
    "concurrently": "9.1.2",
    "eslint": "9.28.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-prettier": "5.4.1",
    "nodemon": "3.1.10",
    "prettier": "3.5.3",
    "ts-node": "10.9.2",
    "typescript": "5.8.3",
    "typescript-eslint": "8.33.1"
  },
  "resolutions": {
    "@types/mime": "3.0.4"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "engines": {
    "node": ">= 20.11.0"
  },
  "packageManager": "yarn@4.9.2",
  "packageRules": [
    {
      "packageNames": [
        "@types/jsonwebtoken"
      ],
      "allowedVersions": "9.0.7"
    }
  ]
}
